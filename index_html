<script>
    const questions = [
        "Вы часто погружаетесь в свои мысли, забывая об окружающем мире.",
        "Для вас логика важнее, чем чувства других людей.",
        "Вы предпочитаете планировать всё до мельчайших деталей.",
        "Вам легко заводить новые знакомства в большой компании."
    ];

    let currentIdx = 0;
    let totalScore = 0;

    function updateView() {
        document.getElementById('q-text').innerText = questions[currentIdx];
        const progress = ((currentIdx) / questions.length) * 100;
        document.getElementById('progress-bar').style.width = progress + '%';
    }

    function handleAnswer(val) {
        totalScore += val;
        currentIdx++;

        if (currentIdx < questions.length) {
            updateView();
        } else {
            showResult();
        }
    }

    function showResult() {
        document.getElementById('quiz').classList.add('hidden');
        document.getElementById('progress-bar').style.width = '100%';
        document.getElementById('result').classList.remove('hidden');
        
        if (totalScore > 0) {
            document.getElementById('res-name').innerText = "ИНТЕЛЛЕКТУАЛ (INTJ)";
            document.getElementById('res-desc').innerText = "Вы независимы, уверены в себе и мыслите стратегически.";
        } else {
            document.getElementById('res-name').innerText = "АКТИВИСТ (ENFJ)";
            document.getElementById('res-desc').innerText = "Вы харизматичны и умеете вдохновлять людей вокруг себя.";
        }
    }

    updateView();
</script>

